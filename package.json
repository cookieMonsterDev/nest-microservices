{
  "name": "nest-microservices-testing",
  "version": "0.0.1",
  "description": "",
  "author": "cookieMonsterDev",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/users/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/users/test/jest-e2e.json",
    "database:pull": "./scripts/database.sh pull",
    "database:push": "./scripts/database.sh push",
    "database:reset": "./scripts/database.sh reset",
    "database:debug": "./scripts/database.sh debug",
    "database:studio": "./scripts/database.sh studio",
    "database:format": "./scripts/database.sh format",
    "database:migrate": "./scripts/database.sh migrate",
    "database:generate": "./scripts/database.sh generate",
    "database:validate": "./scripts/database.sh validate",
    "microservices:up": "./scripts/microservices.sh up",
    "microservices:down": "./scripts/microservices.sh down",
    "prepare": "HUSKY=0 husky install || true"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/microservices": "^11.1.6",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.2.0",
    "@prisma/adapter-pg": "^6.17.1",
    "@prisma/client": "^6.17.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "dotenv": "^17.2.3",
    "kafkajs": "^2.2.4",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "prisma": "^6.17.1",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@libs/kafka(|/.*)$": "<rootDir>/libs/kafka/src/$1",
      "^@libs/common(|/.*)$": "<rootDir>/libs/common/src/$1",
      "^@users-micros/(.*)$": "<rootDir>/apps/users/src/$1",
      "^@users-micros/test/(.*)$": "<rootDir>/apps/users/test/$1",
      "^@users-micros/generated/(.*)$": "<rootDir>/apps/users/generated/$1",
      "^@posts-micros/(.*)$": "<rootDir>/apps/posts/src/$1",
      "^@posts-micros/test/(.*)$": "<rootDir>/apps/posts/test/$1",
      "^@posts-micros/generated/(.*)$": "<rootDir>/apps/posts/generated/$1"
    }
  }
}
